{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NGINX Values",
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string",
          "description": "NGINX image repository"
        },
        "tag": {
          "type": "string",
          "description": "NGINX image tag"
        }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "description": "Service type",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer", "ExternalName"]
        }
      }
    }
  }
}